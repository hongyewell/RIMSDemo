<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="5dp"        
         >
         <TextView 
             android:layout_width="100dp"
             android:layout_height="20dp"
             android:text="用户ID："
             android:textSize="18sp"
             android:layout_marginLeft="20dp"            
             />
         <TextView
             android:id="@+id/edt_MemberID"
             android:layout_width="180dp"
             android:layout_height="18dp"
             android:textSize="15sp"
             android:layout_marginLeft="8dp"
             />
         
     </LinearLayout>
     <ImageView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/line"/>
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="6dp"        
         >

      <TextView
          android:layout_width="120dp"
          android:layout_height="30dp"
          android:layout_marginLeft="20dp"
          android:text="家庭编号："
          android:textSize="18sp" />

         <EditText  
             android:id="@+id/edt_h_number"
             android:layout_width="150dp"
             android:layout_height="32dp"
             android:textSize="15sp"
             android:layout_marginLeft="5dp"
             />
         
     </LinearLayout>
     <ImageView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/line"/>
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="6dp"        
         >
      <TextView 
             android:layout_width="100dp"
             android:layout_height="30dp"
             android:text="用户姓名："
             android:textSize="18sp"
             android:layout_marginLeft="20dp"            
             />
         <EditText  
             android:id="@+id/edt_Name"
             android:layout_width="180dp"
             android:layout_height="30dp"
             android:textSize="15sp"
             android:layout_marginLeft="8dp"
             />
         
     </LinearLayout>
     <ImageView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/line"/>
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="8dp"        
         >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:text="是否为户主："
          android:textSize="18sp" />

         <EditText  
             android:id="@+id/edt_h_hold"
             android:layout_width="150dp"
             android:layout_height="30dp"
             android:textSize="15sp"
             android:layout_marginLeft="8dp"
             />
         
     </LinearLayout>
     <ImageView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/line"/>
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="8dp"        
         >
      <TextView 
             android:layout_width="100dp"
             android:layout_height="30dp"
             android:text="性别："
             android:textSize="18sp"
             android:layout_marginLeft="20dp"            
             />
         <EditText  
             android:id="@+id/edt_Sex"
             android:layout_width="180dp"
             android:layout_height="30dp"
             android:textSize="15sp"
             android:layout_marginLeft="8dp"
             />
         
     </LinearLayout>
     
     <ImageView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/line"/>
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="6dp"        
         >
      <TextView 
             android:layout_width="100dp"
             android:layout_height="30dp"
             android:text="出生年月："
             android:textSize="18sp"
             android:layout_marginLeft="20dp"            
             />
         <EditText  
             android:id="@+id/edt_Birth"
             android:layout_width="180dp"
             android:layout_height="30dp"
             android:textSize="15sp"
             android:layout_marginLeft="8dp"
             />
         
     </LinearLayout>
     <ImageView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/line"/>
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="6dp"        
         >
      <TextView 
             android:layout_width="100dp"
             android:layout_height="30dp"
             android:text="身份证号："
             android:textSize="18sp"
             android:layout_marginLeft="20dp"            
             />
         <EditText  
             android:id="@+id/edt_Certificated"
             android:layout_width="180dp"
             android:layout_height="30dp"
             android:textSize="15sp"
             android:layout_marginLeft="8dp"
             />
         
     </LinearLayout>
     <ImageView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/line"/>
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="6dp"        
         >
      <TextView 
             android:layout_width="100dp"
             android:layout_height="30dp"
             android:text="地址："
             android:textSize="18sp"
             android:layout_marginLeft="20dp"            
             />
         <EditText  
             android:id="@+id/edt_Address"
             android:layout_width="180dp"
             android:layout_height="30dp"
             android:textSize="15sp"
             android:layout_marginLeft="8dp"
             />
         
     </LinearLayout>
     <ImageView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/line"/>
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="6dp"        
         >
      <TextView 
             android:layout_width="100dp"
             android:layout_height="30dp"
             android:text="民族："
             android:textSize="18sp"
             android:layout_marginLeft="20dp"            
             />
         <EditText  
             android:id="@+id/edt_MZ"
             android:layout_width="180dp"
             android:layout_height="35dp"
             android:textSize="15sp"
             android:layout_marginLeft="8dp"
             />
         
     </LinearLayout>
     <ImageView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/line"/>
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="6dp"        
         >
      <TextView 
             android:layout_width="100dp"
             android:layout_height="30dp"
             android:text="户口类型："
             android:textSize="18sp"
             android:layout_marginLeft="20dp"            
             />
         <EditText  
             android:id="@+id/edt_IDtype"
             android:layout_width="180dp"
             android:layout_height="30dp"
             android:textSize="15sp"
             android:layout_marginLeft="8dp"
             />
         
     </LinearLayout>
      <ImageView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@drawable/line"/>
       <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:gravity="center"
       android:layout_marginTop="6dp"
          >
	    <Button 
	        android:id="@+id/submit"
	        android:layout_width="100dp"
	        android:layout_height="30dp"
	        android:text="确认"
	        android:layout_gravity="center_vertical"
	        android:textSize="20sp"
	        android:textColor="#ffffff"
	        android:background="#1F76AC"/>
           
</LinearLayout>
</LinearLayout>
